# TasteBud Backend configuration
# Copy to .env and fill secrets

# Database
TASTEBUD_DATABASE_URL=sqlite:///./tastebud.db

# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini

# Server
HOST=0.0.0.0
PORT=8010
DEBUG=true

# CORS
ALLOWED_ORIGINS=*

# Onboarding
ONBOARDING_MAX_QUESTIONS=5
ONBOARDING_EARLY_STOP_CONFIDENCE=0.8
ONBOARDING_K=0.1
ONBOARDING_SIGMA_STEP=0.12

# Recommendation weights
LAMBDA_CUISINE=0.2
LAMBDA_POP=0.2
MMR_ALPHA=0.7
GPT_CONFIDENCE_DISCOUNT=0.3

# Popularity
DECAY_HALF_LIFE_DAYS=30
